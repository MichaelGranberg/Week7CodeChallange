@model Week7CodeChallenge.Models.CompContactForm
@{
    ViewBag.Title = "Company Contact Form";
    if (!Request.IsAjaxRequest())
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

  
